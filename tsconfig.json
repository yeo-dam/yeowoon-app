{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "strict": true,
    "paths": {
      "~presentation/*": ["presentation/*"],
      "~components/*": ["components/*"],
      "~domain/*": ["domain/*"],
      "~data/*": ["data/*"],
      "~assets/*": ["assets/*"]
    }
  },
  "jsx": "react-native",
  "moduleResolution": "node"
}
